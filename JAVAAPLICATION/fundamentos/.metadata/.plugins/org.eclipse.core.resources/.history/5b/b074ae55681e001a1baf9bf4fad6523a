		//Parte 3 - Calculadora	
		Scanner variavel = new Scanner (System.in);
		System.out.print("Digite o primeiro nº:  ");
						//int num1 = Integer.parseInt(variavel.nextLine()); //cast implicito
		int num1 = variavel.nextInt();
		
		System.out.print("Qual a operação para realizar:  ");
		char operacao = variavel.next().charAt(0);
		System.out.print("Digite o segundo nº:  ");
		int num2 = variavel.nextInt();
		//System.out.println("Você quer fazer a operação "+ num1 + operacao + num2);
		System.out.println(String.format("Você quer fazer a operação %d %c %d ", num1, operacao, num2));
		variavel.close();
		
		
		
		

	}

