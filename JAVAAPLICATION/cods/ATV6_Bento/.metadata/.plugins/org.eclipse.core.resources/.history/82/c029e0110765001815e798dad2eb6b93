package Sistema;

import java.time.LocalDate;

@SuppressWarnings("unused")
public class Transacao {
	
	private LocalDate data;
	private int nregistro;
	private boolean situacao;
	private Cliente beneficiado, contratante;
	private Funcionario responsavel;
	private Transacao transacao;
	
	public Transacao (Cliente beneficiado, Cliente contratante, Funcionario responsavel, int protocolo, LocalDate data) {
		
		this.situacao = false;  
		
		this.beneficiado = beneficiado;
		//this.contratante = contratante;
		beneficiado.addTransacao(beneficiado);
				
		
		this.responsavel = responsavel;
		
		
		
		if (dataHora.isBefore(LocalDateTime.now())) {
			throw new DataHoraPassadaException();
		}
		this.dataHora = dataHora;
		this.situacao = Situacao.Agendada;
		
	}
	
	public LocalDate getDataHora() {
		return dataHora;
	}
	public String getNregistro() {
		return nregistro;
	}
	public boolean isSituacao() {
		return situacao;
	}
	
	
	
	


}
