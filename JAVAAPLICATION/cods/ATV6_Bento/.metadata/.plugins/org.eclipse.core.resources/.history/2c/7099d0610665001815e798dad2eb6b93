package Sistema;

import java.util.ArrayList;



public final class Cliente extends Pessoa{
	
	private TipoCliente cliente;
	private final ArrayList<Transacao> transacoes =
			new ArrayList<>();
			

	public Cliente(String nome, String CPF, TipoCliente cl) {
		super(nome, CPF);		
		this.cliente = cl;
	}


	public TipoCliente getCliente() {
		return cliente;
	}

	
	public void addTransacao(Transacao t) {
		this.transacoes.add(t);		
	}
	
	@Override
	public String toString() {
		return  ",Nome: " + getNome() + ", CPF="
				+ getCPF() + "Sr(a). aqui est√° como,=" + cliente;
	}


	

	
}
