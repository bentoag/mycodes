package Sistema;

import java.util.ArrayList;
import java.util.HashSet;

public final class Funcionario extends Pessoa {

	private final int cod;
	
	private final HashSet <TipoFuncionario>  cargo = new HashSet<>();
	
	public Funcionario(String nome, String CPF, int cod) {
		super(nome, CPF);		
		this.cod = cod;
	}
	
	public void addCargo(TipoFuncionario tp) {
		cargo.add(tp);
	}
	
	public HashSet<TipoFuncionario> getCargo() {
		return cargo;
	}

	public int getCod() {
		return cod;
	}

	@Override
	public String toString() {
		return "Funcion√°rio=" + cargo + ",Nome: " + getNome() + ", CPF="
				+ getCPF() + "Cod. = " + getCod();
	}
}
