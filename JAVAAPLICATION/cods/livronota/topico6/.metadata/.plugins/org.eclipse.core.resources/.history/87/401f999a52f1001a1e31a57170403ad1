package livrodenotas.bento;

import java.util.Scanner;

public class Tela {

	static Scanner input = new Scanner(System.in);

	public static void boasVindas() {
		System.out.println("Bem vindo a execução do Programa Livro de Notas!");
		System.out.println();
	}

	public static double pedirNota(int idAluno) {

		double nota = 0;
		boolean valido;
		
		valido = nota>=0.0 && nota <=10.0;
		
		do {
			System.out.printf("%n%s %d %s", "A nota do aluno ", idAluno, " :  ");
			nota = input.nextDouble();			
		} while (!valido);
		
		return nota;
	}

	public static void imprimeMedias(double[][] medias, String nomeUC) {

		System.out.println("Médias da UC: " + nomeUC);
		for (int i = 0; i < medias.length; i++) {
			System.out.println(medias[i][0]);
		}
	}

	public static void imprimeMedia(double media, String nomeUC, int idAluno) {
		System.out.println("média do aluno na UC, " + nomeUC);
		imprimeMedia(media, idAluno);
	}

	private static void imprimeMedia(double media, int idAluno) {
		System.out.println("Aluno " + idAluno + "média igual: " + media);
	}

}
